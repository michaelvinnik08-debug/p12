@page "/"
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage MySession
@inject NavigationManager navigationManager
@inject IJSRuntime JS
@using Moduls
@using DBL

<PageTitle>TUNETALK LOGIN</PageTitle>

<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, Helvetica, sans-serif;
    }

    :root {
        --primary-color: #FF7A00;
        --background1: #3B1F1F;
        --background2: #1E1A1A;
        --background3: #4A2C2C;
        --card-bg: #2E2424;
        --text-color: #FFF3E2;
        --muted-text: #C7B6A3;
        --accent-color: #E94E77;
        --border-radius: 12px;
        --input-bg: #3C2E2E;
        --input-border: #4F3C3C;
        --shadow: 0 8px 20px rgba(255, 122, 0, 0.4);
        --font-family: "Inter", system-ui, sans-serif;
    }

    .login-page {
        height: 100vh;
        width: 100vw;
        background: linear-gradient(135deg, var(--background1), var(--background2), var(--background3));
        background-size: 300% 300%;
        animation: bgFlow 20s ease-in-out infinite;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

    @@keyframes bgFlow {
        0%

    {
        background-position: 0% 0%;
    }

    50% {
        background-position: 100% 100%;
    }

    100% {
        background-position: 0% 0%;
    }

    }

    .login-card {
        position: fixed;
        z-index: 2;
        background-color: var(--card-bg);
        padding: 2.5rem 3rem;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        width: 340px;
        max-width: 90vw;
        text-align: center;
    }

        .login-card h1 {
            margin-bottom: 1.5rem;
            font-size: 1.8rem;
            color: var(--primary-color);
            text-shadow: 0 0 12px var(--primary-color);
        }

    label {
        font-weight: bold;
        color: var(--muted-text);
        display: block;
        margin-bottom: 0.3rem;
        text-align: left;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 0.7rem;
        margin-bottom: 1rem;
        border-radius: 6px;
        border: 1px solid var(--input-border);
        font-size: 1rem;
        background: var(--input-bg);
        color: var(--text-color);
    }

    input:focus {
        border-color: var(--primary-color);
        outline: none;
        background: #4b3a3a;
    }

    h1.hero-title {
        margin-bottom: 1.5rem;
        font-weight: 900;
        font-size: 2.5rem;
        color: var(--primary-color);
        text-shadow: 0 0 12px var(--primary-color);
    } 
    button {
        width: 100%;
        padding: 0.7rem;
        border: none;
        border-radius: 6px;
        margin-bottom: 1rem;
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
        box-shadow: 0 0 10px transparent;
        transition: background 0.3s, box-shadow 0.3s;
    }

    .login-btn {
        background: var(--primary-color);
        color: white;
        box-shadow: 0 0 10px var(--primary-color);
    }

        .login-btn:hover {
            background: #ff8f2d;
            box-shadow: 0 0 20px #ff8f2d;
        }

    .register-btn {
        background: white;
        border: 2px solid var(--primary-color);
        color: var(--primary-color);
        box-shadow: 0 0 10px var(--primary-color);
    }

        .register-btn:hover {
            background: var(--primary-color);
            color: white;
            box-shadow: 0 0 20px var(--primary-color);
        }

    .message {
        color: var(--accent-color);
        min-height: 20px;
        margin-top: 0.5rem;
    }

    /* Floating Notes */
    .music-note {
        position: fixed;
        pointer-events: none;
        user-select: none;
        color: rgba(255, 122, 0, 0.75);
        font-size: var(--note-size);
        animation-name: floatMove, pulseGlow;
        animation-timing-function: linear, ease-in-out;
        animation-fill-mode: forwards;
        animation-iteration-count: 1, infinite;
        will-change: transform, opacity, filter;
        z-index: 1;
    }

    @@keyframes floatMove {
        0%

    {
        transform: translate(0, 0) rotate(0deg);
        opacity: 1;
    }

    70% {
        opacity: 1;
    }

    100% {
        transform: translate(var(--move-x), var(--move-y)) rotate(360deg);
        opacity: 0;
    }

    }

    @@keyframes pulseGlow {
        0%

    {
        filter: drop-shadow(0 0 2px rgba(255, 140, 0, 0.4));
    }

    50% {
        filter: drop-shadow(0 0 12px rgba(255, 140, 0, 0.85));
    }

    100% {
        filter: drop-shadow(0 0 2px rgba(255, 140, 0, 0.4));
    }

    }
</style>



<script>
    window.startMusicNotesAnimation = () => {

        // Clean existing notes
        document.querySelectorAll(".music-note").forEach(n => n.remove());

        const TOTAL_NOTES = 150;
        const activeNotes = new Set();

        const noteSymbols = ["\u266A", "\u266B", "\u2669", "\u266C"];
        const animationDurationRange = [4000, 8000];
        const noteSizeRange = [14, 30];

        function randomRange(min, max) {
            return Math.random() * (max - min) + min;
        }

        function randomMovement(min, max, minAbs) {
            let v;
            do { v = randomRange(min, max); }
            while (Math.abs(v) < minAbs);
            return v;
        }

        function spawnNote() {
            if (activeNotes.size >= TOTAL_NOTES) return;

            const note = document.createElement("div");
            note.classList.add("music-note");
            activeNotes.add(note);

            note.textContent = noteSymbols[Math.floor(Math.random() * noteSymbols.length)];

            const size = randomRange(noteSizeRange[0], noteSizeRange[1]);
            note.style.setProperty("--note-size", size + "px");

            note.style.left = randomRange(0, window.innerWidth) + "px";
            note.style.top = randomRange(0, window.innerHeight) + "px";

            const moveX = randomMovement(-150, 150, 40);
            const moveY = randomMovement(-150, 150, 40);

            note.style.setProperty("--move-x", moveX + "px");
            note.style.setProperty("--move-y", moveY + "px");

            const duration = randomRange(animationDurationRange[0], animationDurationRange[1]);

            const glowDelay = randomRange(0, 1500);

            note.style.animationDuration = `${duration}ms, 2000ms`;
            note.style.animationDelay = `0ms, ${glowDelay}ms`;

            document.body.appendChild(note);

            setTimeout(() => {
                activeNotes.delete(note);
                note.remove();
                spawnNote();
            }, duration + 50);
            
        }

        for (let i = 0; i < TOTAL_NOTES; i++) {
            spawnNote();
        }
    }
</script>

<div class="login-page">
    <div class="login-card">
        <h1 class="hero-title">Login</h1>

        <label>Email</label>
        <input type="text" @bind="email" placeholder="Email">

        <label>Password</label>
        <input type="password" @bind="password" placeholder="Password">

        <button class="login-btn" @onclick="login">Login</button>
        <button class="register-btn" @onclick="Register">Register</button>

        <div class="message">@message</div>
    </div>
</div>

@code {
    string email = "";
    string password = "";
    string message = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("startMusicNotesAnimation");
        }
    }

    async Task login()
    {
        TunersDB T = new TunersDB();
        Tuners tuners = await T.Login(email, password);

        if (tuners != null)
        {
            await MySession.SetAsync("Tuner", tuners);
            navigationManager.NavigateTo("/Update");
        }
        else
        {
            message = "Invalid email or password";
            email = "";
            password = "";
        }
    }

    void Register()
    {
        navigationManager.NavigateTo("/Register");
    }
}
