@page "/Register"
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage MySession
@inject NavigationManager navigationManager
@inject IJSRuntime JS
@using Moduls
@using DBL

<PageTitle>TUNETALK REGISTER</PageTitle>
<style>
    :root {
        --primary-color: #FF7A00;
        --primary-hover: #FF9E3D;
        --background1: #3B1F1F;
        --background2: #1E1A1A;
        --background3: #4A2C2C;
        --card-bg: #2E2424;
        --text-color: #FFF3E2;
        --muted-text: #C7B6A3;
        --accent-color: #E94E77;
        --border-radius: 12px;
        --input-bg: #3C2E2E;
        --input-border: #4F3C3C;
        --shadow: 0 8px 20px rgba(255, 122, 0, 0.4);
        --font-family: "Inter", system-ui, sans-serif;
    }

    /* Body & page */
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: var(--font-family);
        overflow-x: hidden;
    }

    /* Gradient background animation */
    .page-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, var(--background1), var(--background2), var(--background3));
        background-size: 300% 300%;
        animation: bgFlow 20s ease-in-out infinite;
        z-index: 0;
    }

    /* Card */
    .card {
        position: relative;
        z-index: 2;
        background-color: var(--card-bg);
        padding: 2.5rem 3rem;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        width: 340px;
        max-width: 90vw;
        text-align: center;
    }

    /* Titles */
    h1.hero-title {
        margin-bottom: 1.5rem;
        font-weight: 900;
        font-size: 2.5rem;
        color: var(--primary-color);
        text-shadow: 0 0 12px var(--primary-color);
    }

    h3 {
        font-weight: 500;
        margin-bottom: 0.3rem;
        text-align: left;
        color: var(--muted-text);
    }

    /* Inputs */
    input[type="text"], input[type="email"], input[type="password"] {
        width: 100%;
        padding: 0.7rem 0.85rem;
        margin-bottom: 1.3rem;
        border-radius: var(--border-radius);
        border: 1px solid var(--input-border);
        background-color: var(--input-bg);
        color: var(--text-color);
        font-size: 1.05rem;
        outline: none;
        box-shadow: inset 0 0 5px rgba(0,0,0,0.7);
        transition: 0.3s;
    }

    input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 12px var(--primary-color);
        background-color: #412e1a;
    }

    /* Buttons */
    button {
        width: 100%;
        background-color: var(--primary-color);
        border: none;
        color: white;
        font-weight: 700;
        padding: 0.75rem 1rem;
        margin-bottom: 1rem;
        border-radius: var(--border-radius);
        cursor: pointer;
        font-size: 1.1rem;
        box-shadow: 0 0 15px var(--primary-color);
        transition: 0.3s;
    }

        button:hover {
            background-color: var(--primary-hover);
            box-shadow: 0 0 20px var(--primary-hover);
        }

    /* Message */
    .message {
        margin-bottom: 1rem;
        color: var(--accent-color);
        font-weight: 600;
        min-height: 1.2rem;
    }

    /* Music Notes */
    .music-note {
        position: fixed;
        pointer-events: none;
        user-select: none;
        color: rgba(255, 122, 0, 0.55);
        font-size: var(--note-size);
        animation-name: floatMove, pulseGlow;
        animation-timing-function: linear, ease-in-out;
        animation-fill-mode: forwards;
        animation-iteration-count: 1, infinite;
        will-change: transform, opacity, filter;
        z-index: 1;
    }

    @@keyframes bgFlow {
        0%

    {
        background-position: 0% 0%;
    }

    50% {
        background-position: 100% 100%;
    }

    100% {
        background-position: 0% 0%;
    }

    }

    @@keyframes floatMove {
        0%

    {
        transform: translate(0,0) rotate(0deg);
        opacity: 1;
    }

    100% {
        transform: translate(var(--move-x), var(--move-y)) rotate(360deg);
        opacity: 0;
    }

    }

    @@keyframes pulseGlow {
        0%,100%

    {
        filter: drop-shadow(0 0 2px rgba(255,140,0,0.4));
    }

    50% {
        filter: drop-shadow(0 0 12px rgba(255,140,0,0.85));
    }

    }
</style>

<script>
    window.musicNotes = window.musicNotes || { activeNotes: new Set() };

    window.startMusicNotesAnimation = () => {
        const TOTAL_NOTES = 150;
        const noteSymbols = ["\u266A","\u266B","\u2669","\u266C"];
        const sizeRange = [14,30];
        const durationRange = [4000,8000];

        function random(min,max){return Math.random()*(max-min)+min;}
        function spawnNote(){
            if(window.musicNotes.activeNotes.size>=TOTAL_NOTES) return;
            const note = document.createElement("div");
            note.classList.add("music-note");
            window.musicNotes.activeNotes.add(note);

            note.textContent = noteSymbols[Math.floor(Math.random()*noteSymbols.length)];
            const size = random(sizeRange[0],sizeRange[1]);
            note.style.setProperty("--note-size", size+"px");
            note.style.left = random(0,window.innerWidth)+"px";
            note.style.top = random(0,window.innerHeight)+"px";
            note.style.setProperty("--move-x", random(-150,150)+"px");
            note.style.setProperty("--move-y", random(-150,150)+"px");
            const duration = random(durationRange[0],durationRange[1]);
            const delay = random(0,1500);
            note.style.animationDuration = `${duration}ms, 2000ms`;
            note.style.animationDelay = `0ms, ${delay}ms`;
            document.body.appendChild(note);
            setTimeout(()=>{window.musicNotes.activeNotes.delete(note); note.remove(); spawnNote();}, duration+50);
        }

        // Remove old notes on navigation
        window.musicNotes.activeNotes.forEach(n => n.remove());
        window.musicNotes.activeNotes.clear();

        // Spawn initial batch
     
    }
</script>

<div class="page-background"></div>
<div class="card">
    <h1 class="hero-title">Register</h1>

    <h3>Enter Username</h3>
    <input type="text" @bind-value="username" placeholder="Username" autocomplete="username" />

    <h3>Enter Email</h3>
    <input type="email" @bind-value="email" placeholder="Email" autocomplete="email" />

    <h3>Enter Password</h3>
    <input type="password" @bind-value="password" placeholder="Password" autocomplete="new-password" />

    <button @onclick="Registar" type="button">Register</button>
    <div class="message">@message</div>
</div>

@code {
    string username = "";
    string email = "";
    string password = "";
    string message = "";

    public async Task Registar()
    {
        TunersDB f = new TunersDB();

        if (email!=null)
        {
            Tuners tuners =await f.Reg(username, email, password);
            if(tuners==null)
            {
                message = "email already in use,try another one";
                email = "";
            }
            else{
                message = "Registered!";
                Thread.Sleep(2000);
                await MySession.SetAsync("Tuner", tuners);
            navigationManager.NavigateTo("/Update");
            }
        }
        
        else
            message = "The email is required!";
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
            await JS.InvokeVoidAsync("startMusicNotesAnimation");
    }
}
